nome = input("Qual é o seu nome? ")
idade = int(input("Qual é sua idade? "))
if idade >= 18:

    possui_cnh = int(input("Possui cnh?\n(1-SIM / 2-NÂO) "))
    if possui_cnh == 1:
        print("Pode dirigir. ")
    else:
        print("Não pode dirigir")


else:
    print("Menor de idade")